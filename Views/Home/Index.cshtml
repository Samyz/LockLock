@model LockLock.Models.TableModel
@* @model IEnumerable<LockLock.Models.User> *@
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">

@{
    ViewData["Title"] = "Index Page";
}


<style>
    .topic-color {
        color: #D46C4E;
    }

    .squaredThree {
        position: relative;
        float: left;
    }

    .squaredThree label.Red {
        width: 20px;
        height: 15px;
        cursor: pointer;
        position: absolute;
        top: 0;
        left: 0;
        background: #DD0000;
        border-radius: 4px;
        box-shadow: inset 0px 1px 1px rgba(0, 0, 0, 0.5), 0px 1px 0px rgba(255, 255, 255, 0.4);
    }

    .squaredThree label.Green {
        width: 15px;
        height: 15px;
        cursor: pointer;
        position: absolute;
        top: 0;
        left: 0;
        background: #62AD71;
        border-radius: 4px;
        box-shadow: inset 0px 1px 1px rgba(0, 0, 0, 0.5), 0px 1px 0px rgba(255, 255, 255, 0.4);
    }

    .squaredThree label.Yellow {
        width: 15px;
        height: 15px;
        cursor: pointer;
        position: absolute;
        top: 0;
        left: 0;
        background: #F9AD6A;
        border-radius: 4px;
        box-shadow: inset 0px 1px 1px rgba(0, 0, 0, 0.5), 0px 1px 0px rgba(255, 255, 255, 0.4);
    }

    .squaredThree label.Grey {
        width: 15px;
        height: 15px;
        cursor: pointer;
        position: absolute;
        top: 0;
        left: 0;
        background: Grey;
        border-radius: 4px;
        box-shadow: inset 0px 1px 1px rgba(0, 0, 0, 0.5), 0px 1px 0px rgba(255, 255, 255, 0.4);
    }

    .squaredThree label:after {
        content: '';
        width: 9px;
        height: 5px;
        position: absolute;
        top: 4px;
        left: 4px;
        border: 3px solid #fcfff4;
        border-top: none;
        border-right: none;
        background: transparent;
        opacity: 0;
        -webkit-transform: rotate(-45deg);
        transform: rotate(-45deg);
    }

    @*.squaredThreelabel:hover::after{opacity:0.3;}*@.squaredThree input[type=checkbox] {
        visibility: hidden;
    }

    .squaredThree input[type=checkbox]:checked+label:after {
        opacity: 1;
    }

    .nav-tabs>li.active>a,
    .nav-tabs>li.active>a:focus,
    .nav-tabs>li.active>a:hover {
        color: #D46C4E;
        cursor: default;
        background-color: #fff;
        border: 1px solid #ddd;
        border-bottom-color: transparent;
    }

    .nav-tabs>li>a {
        margin-right: 20px;
        line-height: 1.42857143;
        border: 1px solid transparent;
        border-radius: 4px 4px 0 0;
    }

    .nav>li>a {
        position: relative;
        display: block;
        padding: 10px 40px;
    }

    .btn-info {
        color: #fff;
        background-color: #489D93;
        border-color: #489D93;
    }

    a.tab1 {
        color: white;
        background-color: #B24F32;
    }

    a.tab2 {
        color: white;
        background-color: #D46C4E;
    }

    a.tab3 {
        color: white;
        background-color: #F18060;
    }

    a.tab4 {
        color: white;
        background-color: #F9AD6A;
    }

    a.tab5 {
        color: white;
        background-color: #F9C868;
    }

    .tab-content {
        border: 1px solid #ddd;
        border-top-color: transparent;
    }

    .nav-tabs>li>a {
        margin-right: 20px;
        line-height: 1.42857143;
        border: 1px solid transparent;
        border-radius: 10px 10px 0 0;
    }

    .form-inline label {
        display: -ms-flexbox;
        display: flex;
        -ms-flex-align: center;
        align-items: center;
        -ms-flex-pack: center;
        justify-content: center;
        margin-bottom: 7px;
    }

    label {
        display: inline-block;
        max-width: 120%;
        margin-bottom: 0;
        font-weight: 700;
    }

    .container-row {
        display: flex;
        flex-direction: row;
        width: 60%;
        justify-content: space-around;
    }

    #object {
        margin-left: 2%;
    }

    #btnBooking {
        margin-left: 90%;
    }

    i {
        font-style: normal;
    }

    .modal-header .close {
        margin-top: 0px;
        padding: 0;
        margin: -3rem -2rem -1rem auto;
    }
</style>

<div class="container">
    <ul class="nav nav-tabs">
        <li class="active"><a class="tab1" data-toggle="tab" href="#room1">ROOM 1</a></li>
        <li><a class="tab2" data-toggle="tab" href="#room2">ROOM 2</a></li>
        <li><a class="tab3" data-toggle="tab" href="#room3">ROOM 3</a></li>
        <li><a class="tab4" data-toggle="tab" href="#room4">ROOM 4</a></li>
        <li><a class="tab5" data-toggle="tab" href="#room5">ROOM 5</a></li>
    </ul>

    <div class="tab-content">
        <div id="room1" class="tab-pane fade in active">
            <br>
            <h4 class="topic-color" id="object">Object : @Html.DisplayFor(modelItem => Model.objName)</h4>
            <h4 class="text-center"><b>@Html.DisplayFor(modelItem => Model.timeLength)</b></h4>
            <div class="table-responsive">
                <table class="table">
                    <thead class="table-secondary">
                        <tr>
                            <th scope="col">Start Time</th>
                            @foreach (var item in Model.name)
                            {
                                <th>
                                    @Html.DisplayFor(modelItem => item)
                                </th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < 9; i++)
                        {
                            <tr>
                                <th scope="row">@(i+9).00</th>
                                @for (var j = 0; j < 7; j++)
                                {
                                    <td>
                                        <form name="queryForm" class="form-inline">
                                            <div class="squaredThree">
                                                <input type="checkbox" name="optionsRadios" id="@i@j" value="other"
                                            ng-model="formData.other" ng-true-value="'other'"
                                            ng-init="formData.other='other'" @(Model.table[j,
                                            i].Item1=="Red"||Model.table[j, i].Item1=="Grey"?"disabled":"")>
                                                <label for="@i@j"
                                            class="@Html.DisplayFor(modelItem => Model.table[j, i].Item1)"></label>
                                            </div>
                                            <label class="label-text">&nbsp;(@Html.DisplayFor(modelItem =>
                                        Model.table[j,i].Item2))</label>
                                        </form>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="container-row">
                <form>
                    <div class="squaredThree">
                        <input type="checkbox" disabled>
                        <label class="Red"></label>
                    </div>
                    <label class="label-text">&nbsp;ไม่สามารถจองได้</label>
                </form>
                <form>
                    <div class="squaredThree">
                        <input type="checkbox" disabled>
                        <label class="Grey"></label>
                    </div>
                    <label class="label-text">&nbsp;หมดเวลาการจอง</label>
                </form>

                <form>
                    <div class="squaredThree">
                        <input type="checkbox" disabled>
                        <label class="Green"></label>
                    </div>
                    <label class="label-text">&nbsp;สามารถจองได้</label>
                </form>

                <form>
                    <div class="squaredThree">
                        <input type="checkbox" disabled>
                        <label class="Yellow"></label>
                    </div>
                    <label class="label-text">&nbsp;ยืมกลุ่มอื่น</label>
                </form>
            </div>
            <button id="btnBooking" type="button" class="btn btn-info" data-toggle="modal" data-target="#exampleModal">
                จองอุปกรณ์
            </button>
            <br><br>
        </div>
        <div id="room2" class="tab-pane fade">
            <h3>Menu 2</h3>
            <p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
                consequat.</p>
        </div>
        <div id="room3" class="tab-pane fade">
            <h3>Menu 3</h3>
            <p>Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam
                rem aperiam.</p>
        </div>
        <div id="room4" class="tab-pane fade">
            <h3>Menu 4</h3>
            <p>Eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae dicta sunt explicabo.</p>
        </div>
        <div id="room5" class="tab-pane fade">
            <h3>Menu 5</h3>
            <p>Eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae dicta sunt explicabo.</p>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title w-100 text-center topic-color" id="exampleModalLabel">สรุปรายการจองอุปกรณ์</h3>
                    @* <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button> *@
                    <i class="bi bi-x-circle-fill close" data-dismiss="modal"></i>
                </div>
                <div class="modal-body">
                    <p><i class="bi bi-person-fill"> <b>ชื่อ-นามสกุล :</b> พิมพิดา มุสิกมาศ</i></p>
                    <p><i class="bi bi-tools"> <b>อุปกรณ์ :</b> @Html.DisplayFor(modelItem => Model.objName)</i></p>
                    <p><i class="bi bi-basket-fill"> <b>จำนวนที่จอง :</b> 1</i></p>
                    <p><i class="bi bi-door-open-fill"> <b>ห้องที่จอง :</b> Room 1</i></p>
                    <p><i class="bi bi-clock-fill"> <b>วัน-เวลา :</b> - Sun, 7 March 2021 9.00 - 10.00</i></p>
                </div>
                <div class="modal-footer">
                    @* <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> *@
                    <button type="button" class="btn btn-info">ยืนยันการจอง</button>
                </div>
            </div>
        </div>
    </div>
</div>